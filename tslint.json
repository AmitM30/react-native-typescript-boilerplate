{
  "extends": "tslint-config-airbnb",
  "rules": {
    "variable-name": [
      true,
      "allow-pascal-case"
    ],
    "import-name": [
      true,
      {
        "react": "React"
      }
    ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import [^,]+ from |^export | implements"
      }
    ]
  }
}
